{
  "version": "1.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "espocrm",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "espocrm",
          "servicePath": "/",
          "uploadType": "image",
          "cpu": 1,
          "mem": 2,
          "imageInfo": {
            "imageUrl": "ccr.ccs.tencentyun.com/tcbimages/espocrm:6.1.7"
          },
          "containerPort": 8080,
          "envVariables": {
            "ESPOCRM_SITE_URL": "https://${TcbHttpServiceDefaultDomain}",
            "ESPOCRM_DATABASE_HOST": "{{env.DB_IP}}:{{env.DB_PORT}}",
            "ESPOCRM_DATABASE_USER": "{{env.MYSQL_USERNAME}}",
            "ESPOCRM_DATABASE_PASSWORD": "{{env.MYSQL_PASSWORD}}",
            "ESPOCRM_ADMIN_USERNAME": "{{env.ADMIN_USERNAME}}",
            "ESPOCRM_ADMIN_PASSWORD": "{{env.ADMIN_PASSWORD}}",
            "ESPOCRM_LANGUAGE": "zh_CN",
            "TCB_NOT_SHOW_CYNOS_DB": "${Outputs.espoCRM.Properties.InstanceId}"
          },
          "initialDelaySeconds": 20,
          "volumeMounts": {
            "/var/www/html": "espocrm-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "espocrm-cfs"
        },
        {
          "type": "CynosDB",
          "name": "espoCRM",
          "envMap": {
            "IP": "DB_IP",
            "PORT": "DB_PORT",
            "USERNAME": "MYSQL_USERNAME",
            "PASSWORD": "MYSQL_PASSWORD"
          }
        }
      ],
      "environment": {
        "ADMIN_USERNAME": {
          "description": "管理员账号",
          "required": true,
          "default": "admin"
        },
        "ADMIN_PASSWORD": {
          "description": "管理员密码",
          "required": true,
          "default": "admin@123"
        }
      }
    }
  }
}